@{
	ViewBag.Title = "Movies";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<input type="button" class="btn btn-primary" value="Create" onclick="location.href='@Url.Action("Create", "Movies")'" />

<br />
<br />

<table id="movies" class="table table-bordered table-hover">
	<thead>
		<tr>
			<th>Movie</th>
			<th>Genre</th>
			<th>Release Date</th>
			<th>Date Added</th>
			<th>Number Rented</th>
			<th>Number in Stock</th>
			<th>Delete?</th>
		</tr>
	</thead>
	<tbody />
</table>

@section scripts
{
	<script>
		$(document).ready(function ()
		{
			var table = $("#movies").DataTable
			({
				ajax:
				{
					url: "/api/movies",
					dataSrc: ""
				},
				columns:
				[
					{
						render: function (data, type, movie)
						{
							return `<a href='/movies/edit/${movie.id}'>${movie.name}</a>`;
						}
					},
					{
						data: "genre.name"
					},
					{
						render: function (data, type, movie)
						{
							return new Date(movie.releaseDate).toLocaleDateString();
						}
						},
						{
							render: function (data, type, movie)
							{
								return new Date(movie.dateAdded).toLocaleDateString();
							}
						},
					{
						data: "numberRented"
					},
					{
						data: "numberInStock"
					},
					{
						render: function (data, type, movie)
						{
							return `<button class='btn btn-danger js-delete' data-movie-id='${movie.id}'>Delete</button>`;
						}
					}
				],
				"drawCallback": function ()
				{
					$('[data-toggle="tooltip"]').tooltip();
				}
			});

			$("#movies").on("click", ".js-delete", function ()
			{
				var button = $(this);

				bootbox.confirm("Are you sure you want to delete this movie?", function (result)
				{
					if (result)
					{
						$.ajax
						({
							url: `/api/movies/${button.attr("data-movie-id")}`,
							method: "DELETE",

							success: function ()
							{
								table.row(button.parents("tr")).remove().draw();
								toastr.success("Movie successfully deleted.");
							},

							error: function (xhr)
							{
								const error = JSON.parse(xhr.responseText);
								toastr.error(`An error occurred:${error.message}`);
							}
						});
					}
				});
			});
		});
	</script>
}