@model Vidly.Models.ChangePhoneNumberViewModel

@{
	ViewBag.Title = "Change Phone Number";
}

@using (Html.BeginForm("ChangePhoneNumber", "Manage", FormMethod.Post, new { role = "form", id = "form" }))
{
	@Html.ValidationSummary(true, "Please fix the following errors")
	@Html.AntiForgeryToken()

	<div class="form-group">
		@Html.LabelFor(m => m.PhoneNumber)
		<div class="col-md-12 p-0">
			@Html.TextBox("phone-number", this.Model?.PhoneNumber ?? string.Empty, new { @class = "form-control", data_val_required = "The Phone Number field is required." })
			@Html.HiddenFor(m => m.PhoneNumber)
		</div>
		<div class="col-md-12 p-0">
			@Html.ValidationMessageFor(m => m.PhoneNumber)
		</div>
	</div>

	<button type="submit" class="btn btn-primary">Save</button>
}

@section scripts
{
	<script src="/Content/Static/js/phonenumber.min.js"></script>
	<script>
		/* global jQuery: false, $: false */
		$(document).ready(function ()
		{
			// Initialize the input
			phoneNumberModule.initializePhoneNumberInput('phone-number', 'PhoneNumber');
		});
	</script>
}