@model Vidly.Models.SendCodeViewModel

@{
	ViewBag.Title = "Send Code";
}

<h2>@ViewBag.Title</h2>
<hr />

@using (Html.BeginForm("SendCode", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
	@Html.AntiForgeryToken()
	@Html.ValidationSummary("", new { @class = "text-danger" })

	@Html.Hidden("returnUrl", Model.ReturnUrl)
	@Html.Hidden("rememberMe", Model.RememberMe)

	<p class="text-body">Select the two-factor authentication method</p>

	<div class="row">
		<div class="col-md-8">
			@Html.DropDownListFor(model => model.SelectedProvider, Model.Providers)
		</div>
		<br />
		<br />
		<div class="col-md-8">
			<input type="submit" value="Submit" class="btn btn-primary" />
		</div>
	</div>
}

@section Scripts
{
	@Scripts.Render("~/bundles/jqueryval")
}