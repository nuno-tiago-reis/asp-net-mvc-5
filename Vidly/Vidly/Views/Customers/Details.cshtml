@model Vidly.Models.Customer

@{
	ViewBag.Title = Model.Name;
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<br />

<h4><b>Birth Date</b></h4>
@Model.BirthDate

<h4><b>Membership Type</b></h4>
@Model.MembershipType.Name

<h4><b>Membership Discount</b></h4>
@Model.MembershipType.DiscountRate%

<h4><b>Subscribed to Newsletter? </b></h4>
@(Model.IsSubscribedToNewsletter ? "Subscribed" : "Unsubscribed")