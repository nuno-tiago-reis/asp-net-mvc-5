@{
	ViewBag.Title = "Users";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<input type="button" class="btn btn-primary" value="Create" onclick="location.href='@Url.Action("Create", "Users")'" />

<br />
<br />

<table id="users" class="table table-bordered table-hover">
	<thead>
		<tr>
			<th>User</th>
			<th>Fiscal Number</th>
			<th>Email</th>
			<th>Phone Number</th>
			<th>Two Factor?</th>
			<th>Roles</th>
			<th>Delete?</th>
		</tr>
	</thead>
	<tbody />
</table>

@section scripts
{
<script>
	$(document).ready(function()
	{
		var table = $("#users").DataTable
		({
			ajax:
			{
				url: "/api/users",
				dataSrc: ""
			},
			columns:
			[
				{
					render: function (data, type, user) {
						return "<a href='/users/edit/" + user.id + "'>" + user.userName + "</a>";
					}
				},
				{
					data: "fiscalNumber"
				},
				{
					render: function (data, type, user)
					{
						if (user.emailConfirmed)
						{
							return "<span class='confirmed-contact' data-toggle='tooltip' title='The email is confirmed'>" + user.email + "</span>";
						}
						else
						{
							return "<span class='unconfirmed-contact' data-toggle='tooltip' title='The email is unconfirmed'>" + user.email + "</span>";
						}
					}
				},
				{
					render: function (data, type, user)
					{
						if (user.phoneNumberConfirmed)
						{
							return "<span class='confirmed-contact' data-toggle='tooltip' title='The phone number is confirmed'>" + user.phoneNumber + "</span>";
						}
						else
						{
							return "<span class='unconfirmed-contact' data-toggle='tooltip' title='The phone number is unconfirmed'>" + user.phoneNumber + "</span>";
						}
					}
				},
				{
					render: function (data, type, user)
					{
						if (user.twoFactorEnabled)
						{
							return "<span class='confirmed-contact'>Enabled</span>";
						}
						else
						{
							return "<span class='unconfirmed-contact'>Disabled</span>";
						}
					}
				},
				{
					data: "roles"
				},
				{
					render: function (data, type, user)
					{
						return "<button class='btn btn-danger js-delete' data-user-id='" + user.id + "'>Delete</button>";
					}
				}
			],
			"drawCallback": function()
			{
				$('[data-toggle="tooltip"]').tooltip();
			}
		});

		$("#users").on("click", ".js-delete", function()
		{
			var button = $(this);

			bootbox.confirm("Are you sure you want to delete this user?", function(result)
			{
				if (result)
				{
					$.ajax
					({
						url: "/api/users/" + button.attr("data-user-id"),
						method: "DELETE",

						success: function()
						{
							toastr.success("User successfully deleted.");
							table.row(button.parents("tr")).remove().draw();
						},

						error: function(xhr)
						{
							var error = JSON.parse(xhr.responseText);
							toastr.error("An error occurred:" + error.message);
						}
					});
				}
			});
		});
	});
</script>
}