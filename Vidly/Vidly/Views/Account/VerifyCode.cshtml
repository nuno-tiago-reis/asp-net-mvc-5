@model Vidly.Models.VerifyCodeViewModel

@{
	ViewBag.Title = "Verify Code";
}

@using (Html.BeginForm("VerifyCode", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
	@Html.AntiForgeryToken()
	@Html.ValidationSummary("", new { @class = "text-danger" })

	@Html.Hidden("provider", Model.Provider)
	@Html.Hidden("returnUrl", Model.ReturnUrl)
	@Html.Hidden("rememberMe", Model.RememberMe)

	<div class="form-group">
		@Html.LabelFor(m => m.Code, new { @class = "col-md-2 control-label" })
		<div class="col-md-10">
			@Html.TextBoxFor(m => m.Code, new { @class = "form-control" })
		</div>
	</div>
	<div class="form-group">
		<div class="col-md-offset-2 col-md-10">
			<div class="checkbox">
				<label>@Html.CheckBoxFor(m => m.RememberBrowser) Remember Browser?</label>
			</div>
		</div>
	</div>
	<div class="form-group">
		<div class="col-md-offset-2 col-md-10">
			<input type="submit" class="btn btn-default" value="Submit" />
		</div>
	</div>
}

@section Scripts
{
	@Scripts.Render("~/bundles/jqueryval")
}
