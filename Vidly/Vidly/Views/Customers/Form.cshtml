@using Vidly.Models
@model Vidly.ViewModels.CustomerFormViewModel

@{
	ViewBag.Title = "Customer Form";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@(Model.Customer == null ? "New Customer" : "Edit Customer")</h2>

@using (Html.BeginForm("Save", "Customers"))
{
	@Html.HiddenFor(model => model.Customer.ID)

	<div class="form-group">
		@Html.LabelFor(model => model.Customer.Name)
		@Html.TextBoxFor(model => model.Customer.Name, new { @class = "form-control" })
	</div>
	<div class="form-group">
		@Html.LabelFor(model => model.Customer.BirthDate)
		@Html.TextBoxFor(model => model.Customer.BirthDate, "{0:d MMM yyyy}", new { @class = "form-control" })
	</div>
	<div class="form-group">
		@Html.LabelFor(model => model.Customer.MembershipTypeID)
		@Html.DropDownListFor(
			model => model.Customer.MembershipTypeID,
			new SelectList(Model.MembershipTypes, nameof(MembershipType.ID), nameof(MembershipType.Name)), string.Empty, new { @class = "form-control" }
			)
	</div>
	<div class="checkbox">
		<label>
			@Html.CheckBoxFor(model => model.Customer.IsSubscribedToNewsletter, new { @class = "checkbox" }) Subscribe To Newsletter?
		</label>
	</div>

	<button type="submit" class="btn btn-primary">Save</button>
}
